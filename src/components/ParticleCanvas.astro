<canvas id="particle-canvas"></canvas>

<style>
  #particle-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    opacity: 0.35;
    pointer-events: none;
  }
</style>

<script is:inline>
(function() {
  const canvas = document.getElementById('particle-canvas');
  if (!canvas) return;
  const ctx = canvas.getContext('2d');
  let width, height;
  let particles = [];
  const PARTICLE_COUNT = 80;
  const CONNECTION_DIST = 90;
  const CONNECTION_DIST_SQ = CONNECTION_DIST * CONNECTION_DIST;

  function resize() {
    width = canvas.width = window.innerWidth;
    height = canvas.height = window.innerHeight;
  }
  window.addEventListener('resize', resize);
  resize();

  class Particle {
    constructor() {
      this.x = Math.random() * width;
      this.y = Math.random() * height;
      this.baseVx = (Math.random() - 0.5) * 0.12;
      this.baseVy = (Math.random() - 0.5) * 0.12;
      this.vx = this.baseVx;
      this.vy = this.baseVy;
      this.mass = Math.random() * 1.5 + 0.5;
      this.isAnomaly = Math.random() > 0.985;
    }

    update() {
      let forceX = 0;
      let forceY = 0;

      if (mouse.x != null && mouse.y != null) {
        let dx = mouse.x - this.x;
        let dy = mouse.y - this.y;
        let distSq = dx * dx + dy * dy;

        if (distSq < 90000 && distSq > 100) {
          let dist = Math.sqrt(distSq);
          let forceScalar = (300 - dist) / 300;
          let pull = forceScalar * 0.06;
          let swirl = forceScalar * 0.25;

          if (dist > 40) {
            forceX = (dx / dist) * pull - (dy / dist) * swirl;
            forceY = (dy / dist) * pull + (dx / dist) * swirl;
          } else {
            let push = ((40 - dist) / 40) * 0.4;
            forceX = -(dx / dist) * push;
            forceY = -(dy / dist) * push;
          }
        }
      }

      this.vx += forceX / this.mass;
      this.vy += forceY / this.mass;
      this.vx = this.vx * 0.95 + this.baseVx * 0.05;
      this.vy = this.vy * 0.95 + this.baseVy * 0.05;

      let speed = Math.sqrt(this.vx * this.vx + this.vy * this.vy);
      if (speed > 2.5) {
        this.vx = (this.vx / speed) * 2.5;
        this.vy = (this.vy / speed) * 2.5;
      }

      this.x += this.vx + 0.08;
      this.y += this.vy;

      if (this.x > width + 40) this.x = -40;
      if (this.x < -40) this.x = width + 40;
      if (this.y > height + 40) this.y = -40;
      if (this.y < -40) this.y = height + 40;
    }

    draw() {
      let speedSq = this.vx * this.vx + this.vy * this.vy;
      let intensity = Math.min(speedSq / 5, 1);

      if (this.isAnomaly) {
        ctx.fillStyle = '#00E5FF';
        ctx.shadowBlur = 6 + intensity * 3;
        ctx.shadowColor = '#00E5FF';
      } else {
        let r = Math.floor(106 - 106 * intensity);
        let g = Math.floor(106 + 123 * intensity);
        let b = Math.floor(117 + 138 * intensity);
        ctx.fillStyle = `rgb(${r},${g},${b})`;
        ctx.shadowBlur = intensity * 4;
        ctx.shadowColor = '#00E5FF';
      }

      ctx.beginPath();
      ctx.arc(this.x, this.y, this.isAnomaly ? 1.3 : 0.9 + intensity * 0.2, 0, Math.PI * 2);
      ctx.fill();
      ctx.shadowBlur = 0;
    }
  }

  let mouse = { x: null, y: null };
  window.addEventListener('mousemove', (e) => { mouse.x = e.clientX; mouse.y = e.clientY; });
  window.addEventListener('mouseout', () => { mouse.x = null; mouse.y = null; });

  for (let i = 0; i < PARTICLE_COUNT; i++) particles.push(new Particle());

  function animate() {
    ctx.clearRect(0, 0, width, height);
    particles.forEach(p => p.update());

    ctx.lineWidth = 0.4;
    for (let i = 0; i < particles.length; i++) {
      particles[i].draw();
      for (let j = i + 1; j < particles.length; j++) {
        const dx = particles[i].x - particles[j].x;
        const dy = particles[i].y - particles[j].y;
        const distSq = dx * dx + dy * dy;

        if (distSq < CONNECTION_DIST_SQ) {
          const dist = Math.sqrt(distSq);
          let isNearMouse = false;
          if (mouse.x != null) {
            let mx = (particles[i].x + particles[j].x) / 2 - mouse.x;
            let my = (particles[i].y + particles[j].y) / 2 - mouse.y;
            if (mx * mx + my * my < 30000) isNearMouse = true;
          }

          ctx.beginPath();
          ctx.strokeStyle = isNearMouse
            ? `rgba(0,229,255,${0.2 * (1 - dist / CONNECTION_DIST)})`
            : `rgba(106,106,117,${0.2 * (1 - dist / CONNECTION_DIST)})`;
          ctx.moveTo(particles[i].x, particles[i].y);
          ctx.lineTo(particles[j].x, particles[j].y);
          ctx.stroke();
        }
      }
    }
    requestAnimationFrame(animate);
  }
  animate();
})();
</script>
